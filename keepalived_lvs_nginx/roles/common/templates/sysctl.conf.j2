fs.file-max = 6815744
net.ipv4.conf.all.arp_filter = 0
net.ipv4.conf.default.arp_filter = 0
net.ipv4.conf.{{ ethname }}.arp_filter = 0

net.ipv4.conf.all.rp_filter = 0
net.ipv4.conf.default.rp_filter = 0
net.ipv4.conf.{{ ethname }}.rp_filter = 0

net.ipv4.conf.all.forwarding = 1
net.ipv4.conf.default.forwarding = 1
net.ipv4.conf.{{ ethname }}.forwarding = 1
net.ipv4.conf.lo.forwarding = 1

net.ipv4.conf.lo.arp_ignore = 1
net.ipv4.conf.lo.arp_announce = 2
{% if inventory_hostname in groups['nginx'] %}
net.ipv4.conf.{{ ethname }}.arp_ignore = 1
net.ipv4.conf.{{ ethname }}.arp_announce = 2
{% endif %}
